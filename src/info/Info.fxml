      <ScrollPane hbarPolicy="NEVER" layoutX="75.0" layoutY="150.0" prefHeight="450.0" prefWidth="753.0" styleClass="main-info" stylesheets="@../resources/css/main.css" vbarPolicy="ALWAYS">
         <content>
            <AnchorPane prefWidth="780.0" style="-fx-background-color: #111624;">
               <children>
                  <Accordion maxHeight="660.0" prefHeight="660.0" prefWidth="676.0" stylesheets="@../resources/css/main.css">
                    <panes>
                      <TitledPane contentDisplay="RIGHT" text="What is Coronavirus?" textAlignment="JUSTIFY" wrapText="true">
                        <content>
                          <AnchorPane maxHeight="500.0" minHeight="150.0" minWidth="0.0" prefHeight="300.0" prefWidth="200.0" style="-fx-background-color: #111624;" styleClass="accordion-container" stylesheets="@../resources/css/main.css">
                                 <children>
                                    <TextArea prefHeight="122.0" prefWidth="700.0" style="-fx-background-color: #111624;" styleClass="text-area" stylesheets="@../resources/css/main.css" text="&#10;Stay safe by taking some simple precautions, such as physical distancing, wearing a mask, keeping rooms well ventilated, avoiding crowds, cleaning your hands, and coughing into a bent elbow or tissue.&#10; Check local advice where you live and work. Do it all!" wrapText="true">
                                       <font>
                                          <Font size="15.0" />
                                       </font>
                                    </TextArea>
                                 </children>
                              </AnchorPane>
                        </content>
